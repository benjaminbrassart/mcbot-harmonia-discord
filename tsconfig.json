{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "rootDir": "src/",
        "outDir": "build/",
        "moduleResolution": "Node",
        "baseUrl": "./",
        "paths": {
            "@": ["src/"],
            "@/": ["src/"],
            "@/*": ["src/*"]
        }
    }
}
